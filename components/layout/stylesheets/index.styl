@font-face {
  font-family: 'Work Sans';
  src: 
  url('/assets/WorkSans-Extrabold.woff'),
  url('/assets/WorkSans-Extrabold.woff2'),
  url('/assets/WorkSans-Extrabold.otf'),
  url('/assets/WorkSans-Extrabold.otf') format('embedded-opentype');
  font-weight: 800;
}

@font-face {
  font-family: 'Work Sans';
  src: 
  url('/assets/WorkSans-Bold.woff'),
  url('/assets/WorkSans-Bold.woff2'),
  url('/assets/WorkSans-Bold.otf'),
  url('/assets/WorkSans-Bold.otf') format('embedded-opentype');
  font-weight: 700;
}

@font-face {
  font-family: 'Work Sans';
  src: 
  url('/assets/WorkSans-Light.woff'),
  url('/assets/WorkSans-Light.woff2'),
  url('/assets/WorkSans-Light.otf'),
  url('/assets/WorkSans-Light.otf') format('embedded-opentype');
  font-weight: 300;
}


body, html
	font-family: 'Arial', sans
	padding 0
	margin 0
	width 100%
	height 100%
	font-weight 300
	font-size 12px
	color #000

a
	color #000
	text-decoration none

h1
	font-family: 'Work Sans', Arial, sans
	font-size 20px
	font-weight 800
	margin 0

header
	height 50px
	border-bottom 1px solid #000

	.logo 
		height 100%
		line-height 50px
		position relative
		float right
		padding 0 15px 0 0