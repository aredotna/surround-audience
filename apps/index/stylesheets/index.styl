.container
	position relative
	display flex
	flex-direction row
	flex-wrap wrap
	justify-content start
	top 0
	left 0
	width auto
	max-width 100%
	padding 0
	background-color #FAFAFA

.block
	flex 1 1 240px
	position relative
	padding 50px
	border-right 1px solid #E8E8E8
	border-bottom 1px solid #E8E8E8
	cursor pointer
	
	&:hover
		background-color #F0F0F0
		transition 0.2s
	
	&:active
		background-color #194B46
	
	.block-inner
		min-width 220px
		min-height 220px
			
		img
			max-width 100%
			max-height 280px

	.title
		position relative
		width 100%
		margin 0 0 7px 0
		font-weight normal
		font-size 17px
		height 20px
		transition 0.3s
		text-overflow ellipsis 
		overflow hidden
		white-space nowrap

.credit
	font-size 19px
	position fixed
	bottom 15px
	right 15px
	height 20px